ul
  margin: 0
  padding: 0
  display: flex
  align-content: center
  justify-content: flex-start
  li
    list-style: none
    cursor: pointer
    padding: 10px
    background-color: inherit
    transition: all 1s linear
    &:hover
      color: #003300
      background-color: #80ffbf
      transition: all 1s linear
    &.activeLink
      background-color: #99ccff
      color: #009900
